#include <Common.h>
#include <Config.h>
#include <ESP8266WiFi.h>
#include <Pin.h>
#include <Timer.h>
#include <VibrationSensor.h>

// Uncomment to enable serial debug
#define DEBUG 1

// *****************************************************************************
//                               Global variables
// *****************************************************************************

// Our sensor.
VibrationSensor sensor;

// *****************************************************************************
//                               Arduino functions
// *****************************************************************************

void setup()
{
   Serial.begin(9600);

   printDebug("setup\n");
   sensor.setup();
}

void loop()
{
   sensor.run();
}
